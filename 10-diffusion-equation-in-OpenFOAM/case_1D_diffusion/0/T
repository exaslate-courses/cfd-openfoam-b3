FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 350;

boundaryField
{
    leftWall
    {
        type            fixedValue;
        value           uniform 300;
    }
    rightWall
    {
        type            fixedValue;
        value           uniform 273;
    }
    sides
    {
        type            empty;
    }
}


